    let globalFields = [];
    let cardFieldValues = {};
    const fieldKeyMap = {
      "Name": "name",
      "Class": "class",
      "Section": "section",
      "Roll No.": "rollNo",
      "Father's Name": "fathername",
      "Mother's Name": "mothername",
