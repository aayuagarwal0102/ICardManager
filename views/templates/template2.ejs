        field.style.fontWeight = weight;
      });
    }

    function toggleFieldColorMode() {
      fieldColorMode = !fieldColorMode;
      const controlsDiv = document.getElementById('fieldColorControls');
      const toggleBtn = event.target;
      
      if (fieldColorMode) {
        // Show color and weight controls for each field
        controlsDiv.innerHTML = '';
        toggleBtn.textContent = '‚úÖ Done Editing Styling';
        toggleBtn.style.background = '#28a745';
        
        globalFields.forEach(field => {
          const fieldDiv = document.createElement('div');
          fieldDiv.className = 'field-color-item';
          fieldDiv.style.flexDirection = 'column';
          fieldDiv.style.alignItems = 'flex-start';
          fieldDiv.style.gap = '5px';
          
          const label = document.createElement('span');
          label.textContent = field.label;
          label.style.fontWeight = 'bold';
          
